<%- include('./common/header.ejs') %> 

<table style="width: 100%; margin-left: auto; margin-right: auto;">
    <tr>
        <td style="text-align: center">
            <h1 style="color: #ff5564;font-size: 34px;margin-top: 27px;margin-bottom: 15px;">Hello!</h1>
        </td>
    </tr>
    <tr>
        <td style="text-align: center">
            <p style="margin: 0 0 20px; font-size: 18px; margin-bottom: 40px; line-height: 24px; color: #252525;">
                Thank you for your interest in Candy Coin! <br />
                Congratulations! You won <%= scratchCode.rewardType.name %> worth $<%= scratchCode.rewardAmount %>!</p>
        </td>
    </tr>
</table>

<table style="width: 100%; border-collapse: collapse;margin-bottom: 30px;">
    <tr>
        <td style="border-bottom: solid 1px #f55564;border-right: solid 1px #f55564; padding:10px 0 10px 60px;">
            <span style="display: inline-block; color: #ff5564;font-weight: 600;margin: 0 10px 0 0;">Address</span>
            <p style="display: inline-block; color: #252525;margin: 0;font-size: 14px;">
                <%= redeemRequest.address %>
            </p>
        </td>
        <td style="border-bottom: solid 1px #f55564; padding: 10px;">
            <span style="display: inline-block; color: #ff5564;font-weight: 600;margin: 0 10px 0 0;">Email</span>
            <p style="display: inline-block; color: #252525;margin: 0;font-size: 14px;">
                <%= redeemRequest.email %>
            </p>
        </td>
    </tr>
    <tr>
        <td style="border-right: solid 1px #f55564; padding: 10px 0 10px 60px;">
            <span style="display: inline-block; color: #ff5564;font-weight: 600;margin: 0 10px 0 0;">Phone</span>
            <p style="display: inline-block; color: #252525;margin: 0;font-size: 14px;">
                <%= redeemRequest.phone %>
            </p>
        </td>
        <td style="padding: 10px;">
            <span style="display: inline-block; color: #ff5564;font-weight: 600;margin: 0 10px 0 0;">
                Redeem Date
            </span>
            <p style="display: inline-block; color: #252525;margin: 0;font-size: 14px;">
                <%= dayjs(redeemRequest.createdAt).format('MM/DD/YYYY') %>
            </p>
        </td>
    </tr>
</table>

<table style="width: 100%; margin-left: auto; margin-right: auto;">
    <tr>
        <td>
            <p style="margin: 0;text-align: center;color: #f55564;font-size: 20px;margin-bottom: 30px;">
                You will receive your reward in less than 24 <br />
                hours to the provided wallet address.</p>
        </td>
    </tr>
</table>

<%- include('./common/footer.ejs') %> 